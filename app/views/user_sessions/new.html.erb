<% provide(:title, "Log in") %>
<h1>Log in</h1>

<%= form_tag user_sessions_path, :method => :post do %>
  <div class="row">
    <div class="large-12 column">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>
  </div>
  <div class="row">
    <div class="large-12 column">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
  </div>
  <div class="row">
    <div class="large-12 column">
      <%= check_box_tag :remember_me, 1 %>
      <%= label_tag :remember_me %>
    </div>
  </div>
  <div class="row">
    <div class="large-12 column">
      <%= link_to "Register Now", register_path %>
    </div>
  </div>
  <div class="row">
    <div class="large-12 column">
      <%= submit_tag "Log in", class: "button" %>
    </div>
  </div>
<% end %>
